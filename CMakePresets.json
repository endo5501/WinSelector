{
    "version": 4,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
      {
        "name": "Default_Windows",
        "hidden": true,
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build/${presetName}",
        "displayName": "Windows default configuration",
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Windows"
        },
        "architecture": {
          "value": "x64",
          "strategy": "external"
        },
        "cacheVariables": {
          "CMAKE_CXX_COMPILER": "cl.exe",
          "CMAKE_C_COMPILER": "cl.exe",
          "CMAKE_PREFIX_PATH": "$env{QT_SDK_DIR}",
          "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}/output"
        },
        "environment": {
          "VCINSTALLDIR" : "$env{MSVC2022_VCINSTALLDIR}",
          "PATH": "$env{QT_SDK_DIR}/bin;$penv{PATH}"
        },
        "vendor": {
          "microsoft.com/VisualStudioSettings/CMake/1.0": {
            "hostOS": [ "Windows"]
          }
        }
      },
        {
            "name": "Debug_Windows",
            "inherits": "Default_Windows",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Release_Windows",
            "inherits": "Default_Windows",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}